# Discord Configuration (at least one token + one channel required)
DISCORD_CHANNEL_ID=your_channel_id
DISCORD_TOKEN=your_bot_token

# Multiple bots/channels (optional — add as many as you want)
# DISCORD_TOKEN_2=second_bot_token
# DISCORD_TOKEN_3=third_bot_token
# DISCORD_CHANNEL_2_ID=second_channel_id

# Server Configuration
HOST=0.0.0.0
PORT=3000                                # Backend (Express)
FRONTEND_PORT=3001                       # Frontend (Next.js)
PUBLIC_BASE_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# Encryption (optional — omit for client-only zero-knowledge encryption)
# ENCRYPTION_KEY=your-base64-secret-key

# Upload settings
UPLOAD_TEMP_DIR=./data/temp
UPLOAD_BATCH_SIZE=5
MAX_FILE_SIZE=32212254720                # ~30GB
CHUNK_SIZE=8387584                       # ~8MB (max 25MB for Discord bots)
# MAX_BUFFER_HEALTH=128                  # Max encrypted chunks buffered client-side
# UPLOAD_AGGRESSIVE_MODE=false           # Skip ramp-up (testing only)

# Multi-channel settings
BOTS_PER_CHANNEL=6                       # Bots assigned per channel for uploads

# Download settings
DOWNLOAD_CONCURRENCY=6

# Bot initialization
BOT_INIT_RETRIES=5

# Email (SMTP) — for signup/password reset
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=your_password
EMAIL_FROM=DiscorDrive <user@example.com>
