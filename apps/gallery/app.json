{
  "expo": {
    "name": "DiscorDrive Gallery",
    "slug": "discordrive-gallery",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "discordrive-gallery",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.discordrive.gallery",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to unlock your encrypted gallery",
        "NSPhotoLibraryUsageDescription": "Allow DiscorDrive to access your photos to upload them to the cloud.",
        "NSPhotoLibraryAddUsageDescription": "Allow DiscorDrive to save photos to your library.",
        "NSCameraUsageDescription": "Allow DiscorDrive to access your camera to take photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.discordrive.gallery",
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-local-authentication",
      [
        "expo-sqlite",
        {
          "enableFTS": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos to upload them to the cloud.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos.",
          "isAccessMediaLocationEnabled": true,
          "useFrameworks": "static"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos to upload them to the cloud.",
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to take photos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "apiBase": "https://discordrive.cikowice.pl/api"
    }
  }
}
