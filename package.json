{
  "name": "discordrive",
  "version": "2.0.0",
  "private": true,
  "description": "Cloud storage solution using Discord as a backend",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "dev:backend": "turbo dev --filter=@discordrive/backend",
    "dev:frontend": "turbo dev --filter=@discordrive/frontend",
    "start": "turbo start",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "keywords": [
    "discord",
    "storage",
    "cloud",
    "file-hosting",
    "monorepo"
  ],
  "license": "MIT",
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.15.0"
}
